<Page x:Class="Praktinis2.TestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Praktinis2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TestPage">

    <Grid Background="white">
        <StackPanel>
            <Button Content="Test Database Connection" HorizontalAlignment="Center" VerticalAlignment="Center" Click="TestConnection_Click"/>
            <Button Content="Get Table Names" HorizontalAlignment="Center" VerticalAlignment="Center" Click="GetTableNames_Click"/>
            <ListView Name="tableListView" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Table Names" Width="350"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
    </Grid>
</Page>
